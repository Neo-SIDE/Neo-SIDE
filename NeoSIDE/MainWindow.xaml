<Window x:Class="NeoSIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoSIDE"
        mc:Ignorable="d"
        Title="NeoSIDE" Width="960" Height="540">
    <Grid SizeChanged="MainGrid_SizeChanged" Name="MainGrid" Background="#151515">
        <Grid VerticalAlignment="Top" Height="30" Margin="0,0,-0.4,0">
            <StackPanel Margin="2" Orientation="Horizontal">
                <Border CornerRadius="5" Background="#151515" MouseDown="FileMenuOpen" MouseEnter="topMenu_mouseOver" MouseLeave="topMenu_mouseLeave" Margin="0,0,0,-0.4">
                    <TextBlock Margin="10, 2" FontSize="17" Foreground="White">File</TextBlock>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Margin="0,30,-0.4,29.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Name="FileView">
                <Border Background="#282828" CornerRadius="10" Margin="3"></Border>
            </Grid>

            <GridSplitter Opacity="0" Grid.Column="1" HorizontalAlignment="Stretch" />

            <Grid KeyUp="MainGrid_KeyUp" PreviewKeyDown="ScrollViewer_KeyDown" Grid.Column="3" Name="MainWorkspace" Margin="3,0,-0.4,0" Grid.ColumnSpan="2">
                <Grid.Clip>
                    <RectangleGeometry x:Name="ScriptEditorClip" Rect="0, 0, 745, 450"></RectangleGeometry>
                </Grid.Clip>
                <Border Background="#282828" CornerRadius="10" Margin="3"></Border>
                <Grid Name="ScriptEditorMode">
                    <Border HorizontalAlignment="Left" Width="68" CornerRadius="10, 0, 0, 10" Background="#252525" Margin="3,3,0,3"/>
                    <ScrollViewer Margin="0,10,1.6,8" VerticalScrollBarVisibility="Hidden">
                        <Grid>
                            <StackPanel Name="ScriptEditor" Orientation="Vertical">
                                <Grid Height="20">
                                    <Grid HorizontalAlignment="Left" Width="70">
                                        <TextBlock Text="1" Foreground="#006796" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" Width="70" Margin="0,-5,0,0"/>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Margin="70,0,0,0">
                                        <StackPanel Name="Cursor" Width="2" Background="White"></StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <InkCanvas Name="anotationPencil" Background="Transparent"></InkCanvas>
                        </Grid>

                    </ScrollViewer>
                </Grid>

                <Grid Name="leftPanel" HorizontalAlignment="Left" Width="65" VerticalAlignment="Top" Margin="5,5, 0, 0">
                    <Border Margin="3" Background="#292929" CornerRadius="10" VerticalAlignment="Top">
                        <StackPanel>
                            <Border Height="55" Background="#4287f5" CornerRadius="10, 10, 0, 0"></Border>
                            <Border Height="55"></Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid HorizontalAlignment="Right" Name="rightPanel" Margin="0,2,-205,2" Width="205">
                    <StackPanel Background="#202020" HorizontalAlignment="Right" Width="25" Orientation="Vertical">
                        <Border Background="#353535" Width="25">
                            <Label Foreground="White" Content="Tools" Height="25" Margin="-33,0,-33,0">
                                <Label.LayoutTransform>
                                    <RotateTransform>
                                        <RotateTransform.Angle>90</RotateTransform.Angle>
                                    </RotateTransform>
                                </Label.LayoutTransform>
                            </Label>
                        </Border>
                    </StackPanel>
                    <ScrollViewer MaxHeight="200" Background="#252525" HorizontalAlignment="Right" VerticalAlignment="Top" Width="180" VerticalScrollBarVisibility="Hidden" Margin="-10,10,25,0">
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Background="#303030" Height="21" TextAlignment="Center" FontSize="14"  Text="Current Tool" Foreground="White"></TextBlock>
                                <TextBlock Foreground="White" FontSize="20">just pretend this is</TextBlock>
                                <TextBlock Foreground="White" FontSize="20">useful</TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
        <Grid Name="InfoBar" Background="#202020" VerticalAlignment="Bottom" Height="30" Margin="0,0,-0.4,-1" Grid.Row="1">
            <TextBlock HorizontalAlignment="Left" FontSize="18" Foreground="White">NeoSIDE ver 1.0 Open Source</TextBlock>
            <TextBlock Name="LanguagePrint" HorizontalAlignment="Center" FontSize="18" Foreground="White" Text="Language: [None]"></TextBlock>
        </Grid>

        <Grid Grid.RowSpan="2">
            <StackPanel  Visibility="Hidden" Name="FileMenu" MouseLeave="Menu_MouseLeave" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="3,0,0,0">
                <StackPanel Height="30"></StackPanel>
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0, 0, 5, 5">
                    <Border.Background>
                        <SolidColorBrush Color="#050505" Opacity="0.5"></SolidColorBrush>
                    </Border.Background>

                    <StackPanel>
                        <StackPanel MouseDown="NewProjectOP" Orientation="Horizontal" MouseEnter="topMenu_mouseOver" MouseLeave="topMenu_mouseLeave">
                            <TextBlock Foreground="White" FontSize="15" Text="New Project"/>
                        </StackPanel>
                        <StackPanel Height="2"></StackPanel>
                        <StackPanel  MouseEnter="topMenu_mouseOver" MouseLeave="topMenu_mouseLeave" Orientation="Horizontal">
                            <Image Source="img/icons/newFileOptionIcon.png" Height="15" Width="15"></Image>
                            <StackPanel Width="5"></StackPanel>
                            <TextBlock FontSize="15" Foreground="White" Text="New File"/>
                            <StackPanel Width="50"></StackPanel>
                            <TextBlock Foreground="Gray" Text="ctrl + n"/>
                            <StackPanel Width="5"></StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
